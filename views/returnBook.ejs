<!DOCTYPE html>
<html>
<head>
  <title>Return Book Form</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      padding: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #4CAF50;
      color: white;
    }

    .return-button {
      background-color: #4CAF50;
      color: white;
      border: none;
      padding: 5px 10px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      cursor: pointer;
    }

    .return-button:hover {
      background-color: #45a049;
    }

    .radio-group {
      display: flex;
      align-items: center;
    }

    .radio-group label {
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <h1>Return Book Form</h1>
  <table>
    <thead>
      <tr>
        <th>Book Name</th>
        <th>Full Name</th>
        <th>Return Date</th>
        <th>Return Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Book 1</td>
        <td>John Doe</td>
        <td>2023-07-31</td>
        <td class="radio-group">
          <input type="radio" name="returnStatus_1" id="onTime_1" value="on-Time">
          <label for="onTime_1">On-Time</label>
          <input type="radio" name="returnStatus_1" id="late_1" value="late">
          <label for="late_1">Late</label>
        </td>
      </tr>
      <tr>
        <td>Book 2</td>
        <td>Jane Smith</td>
        <td>2023-07-29</td>
        <td class="radio-group">
          <input type="radio" name="returnStatus_2" id="onTime_2" value="on-Time">
          <label for="onTime_2">On-Time</label>
          <input type="radio" name="returnStatus_2" id="late_2" value="late">
          <label for="late_2">Late</label>
        </td>
      </tr>
      <!-- Add more rows for additional books -->
    </tbody>
  </table>
  <button class="return-button" onclick="submitForm()">Submit</button>

  <script>
    function submitForm() {
      // Get the selected return status for each book
      const book1Status = document.querySelector('input[name="returnStatus_1"]:checked').value;
      const book2Status = document.querySelector('input[name="returnStatus_2"]:checked').value;
      // Add more variables for additional books if needed

      // You can now send the data to the server for further processing, e.g., using AJAX or form submission.
      // For this example, we'll simply log the data to the console.
      console.log("Book 1 Return Status: ", book1Status);
      console.log("Book 2 Return Status: ", book2Status);
    }
  </script>
</body>
</html>
