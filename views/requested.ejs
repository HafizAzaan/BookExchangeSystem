<!DOCTYPE html>
<html>
<head>
  <title>Requested Books</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      padding: 20px;
    }

    h1 {
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #4CAF50;
      color: white;
    }

    .accepted-status {
      color: green;
    }

    .rejected-status {
      color: red;
    }
  </style>
</head>
<body>
  <h1>Requested Books</h1>
  <table>
    <thead>
      <tr>
        <th>Book Name</th>
        <th>Book Author</th>
        <th>Book Genre</th>
        <th>Book Status</th>
      </tr>
    </thead>
    <tbody>
      <% requestedBooks.forEach(function(request) { %>
        <tr>
          <td><%= request.bookName %></td>
          <td><%= request.bookAuthor %></td>
          <td><%= request.bookGenre %></td>
          <td class="<%= request.bookAvailabilityStatus === 'Unavailable' ? 'accepted-status' : 'rejected-status' %>">
            <% if (request.bookAvailabilityStatus === 'Unavailable') { %>
              Accepted
            <% } else if (request.bookAvailabilityStatus === 'Available') { %>
              Rejected
            <% } else { %>
              Unknown
            <% } %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
