<!DOCTYPE html>
<html>
<head>
  <title>Book List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      padding: 20px;
    }

    h1 {
      margin-bottom: 20px;
      text-align: center;
      font-size: 48px;
    }

    p {
      margin-bottom: 10px;
    }

    a {
      color: #4CAF50;
      text-decoration: none;
      margin-right: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    tr:hover {
      background-color: #f5f5f5;
    }
  </style>
</head>
<body>
  <h1>WELCOME TO BOOK EXCHANGE SYSTEM</h1>
  <% if (authenticated) { %>
    <table>
      <tr>
        <th>Book Name</th>
        <th>Book Author</th>
        <th>Book Genre</th>
      </tr>
      <% books.forEach(book => { %>
        <tr>
          <td><%= book.bookName %></td>
          <td><%= book.bookAuthor %></td>
          <td><%= book.bookGenre %></td>
        </tr>
      <% }) %>
    </table>
  <% } else { %>
    <table>
      <tr>
        <th>Book Name</th>
        <th>Book Author</th>
        <th>Book Genre</th>
      </tr>
      <% books.forEach(book => { %>
        <tr>
          <td><%= book.bookName %></td>
          <td><%= book.bookAuthor %></td>
          <td><%= book.bookGenre %></td>
        </tr>
      <% }) %>
    </table>
    <div>
      <a href="/login">Login</a>
      <a href="/register">Register</a>
    </div>
  <% } %>
</body>
</html>
